{
  "name": "econplayground.js",
  "version": "0.1.0",
  "description": "Environment for authoring and interacting with economics graphs",
  "private": true,
  "author": "Nik Nyby",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/ccnmtl/econplayground.js/issues"
  },
  "homepage": "https://github.com/ccnmtl/econplayground.js#readme",
  "dependencies": {
    "commonmark": "~0.28.1",
    "js-cookie": "~2.1.4",
    "jsxgraph": "ccnmtl/jsxgraph#dev",
    "object-assign": "~4.1.1",
    "promise": "~8.0.1",
    "react": "~16.8.2",
    "react-dom": "~16.8.2",
    "react-mathjax2": "~0.0.1",
    "react-sticky": "~6.0.2",
    "webpack": "~4.29.1",
    "webpack-cli": "~3.2.0",
    "whatwg-fetch": "~2.0.3"
  },
  "scripts": {
    "dev": "webpack -d --watch --config config/webpack.config.dev.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "eslint": "eslint src/*.js config/*.js"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "~10.0.0",
    "babel-jest": "~23.4.2",
    "babel-loader": "~8.0.0",
    "canvas": "~2.0.1",
    "eslint": "~5.14.0",
    "eslint-config-react-app": "~3.0.2",
    "eslint-loader": "~2.1.0",
    "eslint-plugin-import": "~2.13.0",
    "eslint-plugin-jsx-a11y": "~6.1.0",
    "eslint-plugin-react": "~7.12.0",
    "file-loader": "~3.0.0",
    "fs-extra": "~7.0.0",
    "jest": "~23.5.0",
    "jsdom": "~9.12.0",
    "react-dev-utils": "~7.0.0",
    "react-test-renderer": "~16.8.2",
    "style-loader": "~0.23.0",
    "url-loader": "~1.1.1"
  },
  "greenkeeper": {
    "ignore": [
      "jsdom"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
