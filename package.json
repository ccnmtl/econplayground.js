{
  "name": "econplayground.js",
  "version": "0.1.0",
  "description": "Environment for authoring and interacting with economics graphs",
  "private": true,
  "author": "Nik Nyby",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/ccnmtl/econplayground.js/issues"
  },
  "homepage": "https://github.com/ccnmtl/econplayground.js#readme",
  "dependencies": {
    "commonmark": "0.30.0",
    "jsxgraph": "~1.4.5",
    "mathjax-full": "^3.1.2",
    "mathjax-react": "CharlieMcVicker/mathjax-react",
    "object-assign": "~4.1.1",
    "promise": "~8.3.0",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "webpack": "~5.75.0",
    "webpack-cli": "~5.0.0",
    "whatwg-fetch": "~3.6.1"
  },
  "scripts": {
    "dev": "webpack --mode development --watch --config config/webpack.config.dev.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "eslint": "eslint src/*.js config/*.js"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/eslint-parser": "^7.15.8",
    "babel-jest": "~29.4.0",
    "babel-loader": "~9.1.0",
    "bfj": "^7.0.2",
    "canvas": "~2.11.0",
    "eslint": "~8.32.0",
    "eslint-plugin-import": "~2.27.4",
    "eslint-plugin-jsx-a11y": "~6.7.0",
    "eslint-plugin-react": "~7.32.0",
    "file-loader": "~6.2.0",
    "fs-extra": "~11.1.0",
    "jest": "~29.4.0",
    "jest-environment-jsdom": "29.4.0",
    "jsdom": "~21.1.0",
    "lodash": "^4.17.20",
    "react-dev-utils": "~12.0.0",
    "react-test-renderer": "~18.2.0",
    "style-loader": "~3.3.0",
    "url-loader": "~4.1.0"
  },
  "greenkeeper": {
    "ignore": [
      "jsdom"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
