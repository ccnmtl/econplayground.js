{
  "name": "econplayground.js",
  "version": "0.1.0",
  "description": "Environment for authoring and interacting with economics graphs",
  "private": true,
  "author": "Nik Nyby",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/ccnmtl/econplayground.js/issues"
  },
  "homepage": "https://github.com/ccnmtl/econplayground.js#readme",
  "dependencies": {
    "commonmark": "~0.29.0",
    "js-cookie": "~2.2.1",
    "jsxgraph": "ccnmtl/jsxgraph#dump-to-svg",
    "object-assign": "~4.1.1",
    "promise": "~8.0.1",
    "react": "~16.10.1",
    "react-dom": "~16.10.1",
    "react-mathjax2": "~0.0.1",
    "react-sticky": "~6.0.2",
    "webpack": "~4.41.0",
    "webpack-cli": "~3.3.0",
    "whatwg-fetch": "~3.0.0"
  },
  "scripts": {
    "dev": "webpack -d --watch --config config/webpack.config.dev.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "eslint": "eslint src/*.js config/*.js"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "~10.0.0",
    "babel-jest": "~24.9.0",
    "babel-loader": "~8.0.0",
    "canvas": "~2.6.0",
    "eslint": "~6.5.0",
    "eslint-config-react-app": "~5.0.0",
    "eslint-loader": "~3.0.0",
    "eslint-plugin-import": "~2.18.2",
    "eslint-plugin-jsx-a11y": "~6.2.2",
    "eslint-plugin-react": "~7.16.0",
    "file-loader": "~4.2.0",
    "fs-extra": "~8.1.0",
    "jest": "~24.9.0",
    "jsdom": "~15.2.0",
    "react-dev-utils": "~9.1.0",
    "react-test-renderer": "~16.11.0",
    "style-loader": "~1.0.0",
    "url-loader": "~2.2.0"
  },
  "greenkeeper": {
    "ignore": [
      "jsdom"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
