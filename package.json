{
  "name": "econplayground.js",
  "version": "0.1.0",
  "description": "Environment for authoring and interacting with economics graphs",
  "private": true,
  "author": "Nik Nyby",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/ccnmtl/econplayground.js/issues"
  },
  "homepage": "https://github.com/ccnmtl/econplayground.js#readme",
  "dependencies": {
    "babel-core": "~6.26.0",
    "babel-eslint": "~8.2.0",
    "babel-preset-react-app": "~3.1.1",
    "babel-runtime": "~6.26.0",
    "commonmark": "~0.28.1",
    "js-cookie": "~2.1.4",
    "jsxgraph": "github:jsxgraph/jsxgraph#v0.99.7",
    "object-assign": "~4.1.1",
    "promise": "~8.0.1",
    "react": "~16.4.0",
    "react-dom": "~16.4.0",
    "react-mathjax2": "~0.0.1",
    "webpack": "~4.12.0",
    "webpack-cli": "~3.0.1",
    "whatwg-fetch": "~2.0.3"
  },
  "scripts": {
    "dev": "webpack -d --watch --config config/webpack.config.dev.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "eslint": "eslint src/*.js config/*.js"
  },
  "devDependencies": {
    "babel-jest": "~23.0.0-alpha.0",
    "babel-loader": "~7.1.2",
    "eslint": "~4.19.0",
    "eslint-config-react-app": "~2.1.0",
    "eslint-loader": "~2.0.0",
    "eslint-plugin-import": "~2.12.0",
    "eslint-plugin-jsx-a11y": "~6.0.2",
    "eslint-plugin-react": "~7.9.1",
    "file-loader": "~1.1.5",
    "fs-extra": "~6.0.0",
    "jest": "~22.4.2",
    "jsdom": "~9.12.0",
    "react-dev-utils": "~5.0.0",
    "react-test-renderer": "~16.4.0",
    "style-loader": "~0.21.0",
    "url-loader": "~1.0.0"
  },
  "greenkeeper": {
    "ignore": [
      "jsdom"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
